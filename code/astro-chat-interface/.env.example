# SIM-ONE Chat Interface Environment Variables

# API Configuration
SIMONE_API_URL=http://localhost:8000
SIMONE_API_KEY=your-api-key-here
PUBLIC_SDK_MODE=mock # set to 'server' to use server SDK API routes

# Persistence backend: 'sqlite' (default) or 'redis'
PERSISTENCE_BACKEND=sqlite
# For Redis backend
REDIS_URL=redis://localhost:6379

# Authentication (OAuth)
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# WebSocket Configuration  
WS_URL=ws://localhost:8001
WS_RECONNECT_INTERVAL=5000

# Application Settings
APP_ENV=development
APP_DEBUG=true
SESSION_SECRET=your-session-secret-here

# Database (if needed for user sessions)
DATABASE_URL=postgresql://user:password@localhost:5432/simone_chat

# Redis (for session management)
REDIS_URL=redis://localhost:6379

# Feature Flags
ENABLE_GUEST_MODE=true
ENABLE_VOICE_INPUT=false
ENABLE_FILE_UPLOAD=true
ENABLE_ANALYTICS=false
