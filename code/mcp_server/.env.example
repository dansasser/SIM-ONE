# API Authentication
VALID_API_KEYS=your-production-api-key-1,your-production-api-key-2

# External Services
OPENAI_API_KEY=your-openai-api-key
SERPER_API_KEY=your-serper-api-key

# Database
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_MODE=standalone  # standalone | cluster
# REDIS_URL=redis://localhost:6379

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Logging
LOG_LEVEL=INFO

# Neural Engine
NEURAL_ENGINE_BACKEND=mock  # options: mock | openai | local | mvlm
LOCAL_MODEL_PATH=models/mvlm_gpt2/mvlm_final

# MVLM local model switching (optional)
# Comma-separated alias:path pairs, then set ACTIVE_MVLM_MODEL to an alias
MVLM_MODEL_DIRS=main:models/mvlm_gpt2/mvlm_final
ACTIVE_MVLM_MODEL=main

# MVLM decoding controls
MVLM_MAX_NEW_TOKENS=160
MVLM_DO_SAMPLE=true
MVLM_GREEDY=false
MVLM_TEMPERATURE=0.8
MVLM_TOP_P=0.95
MVLM_TOP_K=50
MVLM_REPETITION_PENALTY=1.1
MVLM_NO_REPEAT_NGRAM_SIZE=3
# MVLM_SEED=42
# MVLM_LORA_ADAPTER_PATH=path/to/lora_adapter

# OpenAI backend (optional)
OPENAI_MODEL=gpt-4o-mini
# OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_TIMEOUT_SECONDS=30
OPENAI_MAX_RETRIES=2
OPENAI_JSON_ONLY=true
SESSION_TTL_SECONDS=86400

# Concurrency caps
RAG_MAX_CONCURRENCY=8
CRITIC_FACTCHECK_MAX_CONCURRENCY=3
PROTOCOL_TIMEOUT_MS=10000
MAX_PARALLEL_PROTOCOLS=4
PROTOCOL_TIMEOUTS_MS=

# Governance & Rate Limits
GOV_ENABLE=true
GOV_MIN_QUALITY=0.6
GOV_REQUIRE_COHERENCE=false

RATE_LIMIT_EXECUTE=20/minute
RATE_LIMIT_PROTOCOLS=60/minute
RATE_LIMIT_TEMPLATES=60/minute
RATE_LIMIT_SESSION=30/minute
RATE_LIMIT_METRICS=10/minute
API_KEY_QUOTA_PER_MINUTE=0
METRICS_PUBLIC=false
