{
  "name": "@simone-ai/mcp-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for the SIM-ONE MCP Server (FastAPI)",
  "license": "MIT",
  "author": "SIM-ONE Team",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}

